{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "types": ["node", "chrome"],
    "sourceMap": false,
    "noEmitOnError": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/dist", "**/node_modules"]
}
